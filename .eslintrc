{
	"env": {
        "es2020": true,
        "node": true,
        "es6": true,
        "jest": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {}
	},
	"plugins": [
		"prettier"
	],
	"presets": ["env"],
	"rules": {
		"indent": ["error", "tab"],
		"arrow-body-style": ["error", "as-needed"],
		"no-tabs": 0,
		"import/prefer-default-export": 0,
		"no-console": 0,
		"max-len": ["error", { "code": 150}],
		"no-return-await": 0,
		"class-methods-use-this": 0,
		"no-await-in-loop": 0,
		"no-plusplus": 0,
		"no-namespace": 0,
		"no-inner-declarations": 0,
		"no-bitwise": 0,
		"prefer-destructuring": 0,
		"camelcase": 0,
		"arrow-parens": 0,
		"function-paren-newline": 0,
		"comma-dangle": 0,
		"no-continue": 0,
		"no-unused-vars": "off"
	}
}